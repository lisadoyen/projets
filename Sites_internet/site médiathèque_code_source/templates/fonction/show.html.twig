{% extends "layout.html.twig" %}
{% block body %}
<div class="container cadre">
    <h1 class="titre-responsive">Fonction</h1>

    <table class="table table-responsive">
        <tbody class="text-show-responsive-detail">
            <tr>
                <th>Id</th>
                <td>{{ fonction.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ fonction.libelle }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('fonction_index') }}" class="edit-btn btn-responsive-global">Liste des fonctions</a>
    <a href="{{ path('fonction_edit', {'id': fonction.id}) }}" class="edit-btn btn-responsive-global">Modifier</a>
    <a href="{{ path('crud_list') }}" class="edit-btn btn-responsive-global ml-0">Menu</a>

    {{ include('fonction/_delete_form.html.twig') }}
</div>
{% endblock %}
