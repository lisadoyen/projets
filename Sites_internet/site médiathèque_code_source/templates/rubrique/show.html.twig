{% extends "layout.html.twig" %}
{% block body %}
<div class="container cadre">

    <h1 class="titre-responsive">Rubrique</h1>

    <table class="table table-responsive">
        <tbody class="text-show-responsive-detail">
        <tr>
            <th>Id</th>
            <td>{{ rubrique.id }}</td>
        </tr>
        <tr>
            <th>Libelle</th>
            <td>{{ rubrique.libelle }}</td>
        </tr>
        <tr>
            <th>Categories</th>
            <td>
                {% for cat in rubrique.categories %}
                    {{ cat.libelle }}
                {% endfor %}
            </td>
        </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col"><a href="{{ path('rubrique_edit', {'id': rubrique.id}) }}" class="edit-btn btn-responsive-global">Modifier</a></div>
        <div class="col">{{ include('rubrique/_delete_form.html.twig') }}</div>
    </div>
    <a href="{{ path('rubrique_index') }}"  class="edit-btn btn-responsive-global">Liste des rubriques</a>
    <a href="{{ path('crud_list') }}" class="edit-btn btn-responsive-global ml-0">Menu</a>
</div>
{% endblock %}
