{% extends "layout.html.twig" %}
{% block body %}
<div class="container cadre">
    <h1 class="titre-responsive">Entreprise</h1>

    <table class="table table-responsive">
        <tbody class="text-show-responsive-detail">
            <tr>
                <th>Id</th>
                <td>{{ entreprise.id }}</td>
