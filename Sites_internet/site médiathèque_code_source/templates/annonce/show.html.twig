{% extends "layout.html.twig" %}
{% block body %}
    <div class="container cadre">

        <h1 class="titre-responsive">Annonce</h1>

        <table class="table table-responsive">
            <tbody class="text-show-responsive-detail">
            <tr>
                <th>Id</th>
                <td>{{ annonce.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ annonce.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ annonce.contenu|raw }}</td>
            </tr>
            <tr>
                <th>Image</th>
               <td>
                {% if annonce.vignette == NULL %}
                    <img src="{{asset('assets/images/noImage.jpg')}}" alt="pas d'image" class="img-annonce-no">
                {% else %}
                    <img src="{{asset('assets/images/account/')}}{{ annonce.vignette }}" alt="{{ annonce.vignette }}" class="img-annonce">
                {% endif %}
               </td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ annonce.dateCreation ? annonce.dateCreation|date('d/m/Y') : '' }}</td>
            </tr>
            </tbody>
        </table>


        <div class="row">
            <div class="col"><a href="{{ path('annonce_edit', {'id': annonce.id}) }}" class="edit-btn btn-responsive-global">Modifier</a></div>
            <div class="col">{{ include('annonce/_delete_form.html.twig') }}</div>
        </div>

        <a class="edit-btn btn-responsive-global" href="{{ path('annonce_index') }}">Liste des annonces</a>
        <a href="{{ path('crud_list') }}" class="edit-btn btn-responsive-global ml-0">Menu</a>
    </div>
{% endblock %}
