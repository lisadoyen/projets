{{ form_row(form.montantCaution) }}
{{ form_row(form.montantVente) }}
{{ form_row(form.observation) }}
{{ form_row(form.numerique) }}

<button class="edit-btn btn-responsive-global">{{ button_label|default('Appliquer') }}</button>
{{ form_end(form) }}

