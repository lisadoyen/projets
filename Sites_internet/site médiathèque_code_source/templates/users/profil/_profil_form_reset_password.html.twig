{% extends "layout.html.twig" %}
{% block body %}
<div class="container cadre">
    <h1 class="titre-responsive">Modification du mot de passe</h1><hr>
    <form action="{{ path('edit_password_profil') }}" method="post">
        <div class="form-group form-maintenance-responsive">
            <label for="password">Nouveau mot de passe : </label>
            <input required id="password" name="password" type="password" class="form-control form-maintenance-responsive" min="8">
        </div>
        <div class="form-group  form-maintenance-responsive">
            <label for="password_confirm">Confirmer le mot de passe : </label>
            <input required id="password_confirm" name="password_confirm" type="password" class="form-control form-maintenance-responsive">
        </div>
        <hr>
        <div class="row">
            <div class="col-sm">
                <a href="{{path('profil')}}" class="edit-btn btn-responsive-global">Annuler</a>
            </div>    
            <div class="col-sm">
                <button type="submit" class="edit-btn btn-responsive-global">Valider</button>
            </div>
        </div>
        
    </form>
</div>
{% endblock %}
